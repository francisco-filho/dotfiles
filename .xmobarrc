Config { font = "xft:Noto Sans Mono-12:Normal"
    , additionalFonts = ["xft:mononoki Nerd Font Mono:pixelsize=22:antialias=true:hinting=true"]
    , bgColor = "#222"
    , fgColor = "#fff"
    --, alpha = 220
    , position = TopW L 100
    --, position = TopP 0 100
    --, commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
    --, Run Memory ["-t","MEM: <usedratio>%"] 10
    --, Run Date "%d/%m/%Y %H:%M" "date" 10
    , commands = [ Run Cpu ["-t", "CPU: (<total>%)", "-H","50","--high","red"] 10
    , Run Memory ["-t","MEM: <usedratio>%"] 10
    , Run Date "<fn=1>\xf133</fn> %d/%m/%Y %H:%M " "date" 10
    , Run StdinReader
    ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%StdinReader% }{ <box type=Bottom color=myBorderColor><fc=#80cee1,#111><icon=/home/francisco/Images/xpm/cpu.xpm/> %cpu% </fc></box> <box type=Bottom color=#80cee1><fc=#08cee1><icon=/home/francisco/Images/xpm/memory.xpm/> %memory%</fc></box> <box type=Bottom color=#80cee1><fc=#80cee1>%date%</fc></box>     "
    }
