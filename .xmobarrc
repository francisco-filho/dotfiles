Config { font = "xft:Noto Sans Mono-13:Normal"
    , additionalFonts = ["xft:mononoki Nerd Font Mono:pixelsize=16:antialias=true:hinting=true"]
    , bgColor = "#333"
    , fgColor = "#fff"
    , alpha = 220
    , position = TopW L 100
    --, position = TopP 0 100
    --, commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
    --, Run Memory ["-t","Mem: <usedratio>%"] 10
    --, Run Date "%d/%m/%Y %H:%M" "date" 10
    , commands = [ Run Cpu ["-t", "<fn=1>\xf108</fn> cpu: (<total>%)", "-H","50","--high","red"] 10
    , Run Memory ["-t","<fn=1>\xf233</fn> mem: <usedratio>%"] 10
    , Run Date "<fn=1>\xf133</fn> %d/%m/%Y %H:%M " "date" 10
    , Run StdinReader
    ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%StdinReader% }{ <fc=#98be65>%cpu%</fc> | <fc=#ff6c6b>%memory%</fc> | <fc=#ee9a00>%date%</fc>        "
    }
